<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- User icon -->
    <ImageView
        android:id="@+id/image_user_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:padding="10dp" />

    <!-- Tweet edit -->
    <EditText
        android:id="@+id/edit_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_count"
        android:layout_toRightOf="@+id/image_user_icon"
        android:background="#00FFFFFF"
        android:ems="10"
        android:hint="@string/whats_happen"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textSize="16dp" />

    <!-- Character counter -->
    <TextView
        android:id="@+id/text_count"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_post"
        android:gravity="center"
        android:text="140"
        android:textColor="?attr/colorStrong"
        android:textSize="18dp" />

    <!-- Post button -->
    <ImageButton
        android:id="@+id/button_post"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_colorless"
        android:padding="13dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tweet"
        android:tint="?attr/colorMiddle" />
</RelativeLayout>