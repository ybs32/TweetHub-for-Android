<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ybsystem.tweethub">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.TweetHubApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="false"
        android:theme="@style/LightTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OAuthActivity"
            android:configChanges="orientation|screenSize"
            android:label="アカウント認証"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="ybsystem" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:configChanges="orientation|screenSize"
            android:label="" />
        <activity
            android:name=".activities.TimelineActivity"
            android:configChanges="orientation|screenSize"
            android:label="" />
        <activity
            android:name=".activities.UserListActivity"
            android:configChanges="orientation|screenSize"
            android:label="" />
        <activity
            android:name=".activities.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activities.PostActivity"
            android:configChanges="orientation|screenSize"
            android:label="ツイート"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.PhotoActivity"
            android:configChanges="orientation|screenSize"
            android:label="フォト" />
        <activity
            android:name=".activities.VideoActivity"
            android:configChanges="orientation|screenSize"
            android:label="ムービー" />
        <activity
            android:name=".activities.preference.SettingActivity"
            android:configChanges="orientation|screenSize"
            android:label="設定" />
        <activity
            android:name=".activities.preference.ThemeActivity"
            android:configChanges="orientation|screenSize"
            android:label="テーマ設定" />
        <activity
            android:name=".activities.preference.AppearanceActivity"
            android:configChanges="orientation|screenSize"
            android:label="タイムライン表示" />
        <activity
            android:name=".activities.preference.ClickActionActivity"
            android:configChanges="orientation|screenSize"
            android:label="タップ動作" />
        <activity
            android:name=".activities.preference.SystemActivity"
            android:configChanges="orientation|screenSize"
            android:label="システム動作" />
        <activity
            android:name=".activities.preference.WallpaperActivity"
            android:configChanges="orientation|screenSize"
            android:label="壁紙設定" />
        <activity
            android:name=".activities.preference.ColumnActivity"
            android:configChanges="orientation|screenSize"
            android:label="カラム管理" />
        <activity
            android:name=".activities.preference.AccountActivity"
            android:configChanges="orientation|screenSize"
            android:label="アカウント管理" />
        <activity
            android:name=".activities.preference.BrowserAuthActivity"
            android:configChanges="orientation|screenSize"
            android:label="Twitter認証" />
    </application>
</manifest>