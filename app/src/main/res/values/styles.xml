<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="colorPrimary">#7777BB</item>
        <item name="colorPrimaryDark">#7777BB</item>
        <item name="colorAccent">#555599</item>
        <item name="colorControlHighlight">#D7D7D7</item>
        <item name="colorBorder">#BBBBBB</item>
        <item name="colorDivider">#DDDDDD</item>
        <item name="colorDisabledText">#BBBBBB</item>
        <item name="colorIcon">#555555</item>
        <item name="colorLink">#3355EE</item>
        <item name="colorReply">#000000</item>
        <item name="colorRetweet">#44BB66</item>
        <item name="colorFavorite">#DD2266</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="colorPrimary">#666699</item>
        <item name="colorPrimaryDark">#666699</item>
        <item name="colorAccent">#CCCCFF</item>
        <item name="colorControlHighlight">#444444</item>
        <item name="colorBorder">#666666</item>
        <item name="colorDivider">#444444</item>
        <item name="colorDisabledText">#666666</item>
        <item name="colorIcon">#DDDDDD</item>
        <item name="colorLink">#AACCFF</item>
        <item name="colorReply">#000000</item>
        <item name="colorRetweet">#88FFAA</item>
        <item name="colorFavorite">#FF66AA</item>
    </style>

    <style name="TabTheme16dpText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>