    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="colorPrimary">#666699</item>
        <item name="colorPrimaryDark">#666699</item>
        <item name="colorAccent">#CCCCFF</item>
        <item name="colorControlHighlight">#444444</item>
        <item name="colorWeak">#666B70</item>
        <item name="colorStrong">#CCCBD0</item>
        <item name="colorRetweet">#66DD88</item>
        <item name="colorFavorite">#FFBB33</item>
        <item name="colorLike">#EE6699</item>
        <item name="colorTalk">#AAAAEE</item>
        <item name="colorDelete">#FF4444</item>
        <item name="colorLink">#AACCFF</item>
        <item name="colorBgRetweet">#5F4448</item>
        <item name="colorBgReply">#44485F</item>
        <item name="colorBgMyTweet">#445F48</item>
    </style>

    <style name="TabTheme16dpText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTheme14dpText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
